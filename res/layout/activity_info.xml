<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/ScrollView1"
    android:background="#ff535353"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="10.0dip">
        <RelativeLayout
            android:background="#ffffffff"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher"
                android:contentDescription="@string/desc_logo" />
            <TextView
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="12.0sp"
                android:textColor="#ff666666"
                android:id="@+id/app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip"
                android:text=""
                android:layout_alignLeft="@+id/app_name"
                android:layout_alignBottom="@+id/app_logo" />
            <TextView
                android:textAppearance="?android:textAppearanceLarge"
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip"
                android:text="@string/app_name"
                android:layout_toRightOf="@+id/app_logo"
                android:layout_above="@+id/app_version" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="10.0dip">
            <TextView
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#fff2f2f2"
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.0dip"
                android:text="@string/str_dev" />
            <TextView
                android:textColor="#ff000000"
                android:gravity="center"
                android:id="@+id/textView2"
                android:background="#ffffffff"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:clickable="true"
                android:text="@string/str_developer" />
            <TextView
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#fff2f2f2"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.0dip"
                android:text="@string/str_maintain" />
            <TextView
                android:textColor="#ff000000"
                android:gravity="center"
                android:id="@+id/textView4"
                android:background="#ffffffff"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:clickable="true"
                android:text="@string/str_modifier" />
            <TextView
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#fff2f2f2"
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.0dip"
                android:text="@string/str_original" />
            <TextView
                android:textColor="#ff000000"
                android:gravity="center"
                android:id="@+id/textView6"
                android:background="#ffffffff"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:clickable="true"
                android:text="@string/str_origdev" />
            <TextView
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#fff2f2f2"
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.0dip"
                android:text="@string/action_help" />
            <TextView
                android:textColor="#ff000000"
                android:gravity="center"
                android:id="@+id/textView8"
                android:background="#ffffffff"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:clickable="true"
                android:text="@string/action_help" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>